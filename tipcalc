		<script>
			function Compute(op) {
				res="??";
				tip = Number(op);
				amount=document.getElementById("display");
				a=amount.innerText;
				document.getElementById("display").innerHTML = tip*Number(a);
			}
			function Add(digit) {
				document.getElementById("display").innerHTML += digit;
			}
			function Clear() {
				document.getElementById("display").innerHTML ="";
			}
